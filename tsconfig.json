{
  "compilerOptions": {
    "module": "ESNext",
    "removeComments": true,
    "baseUrl": "./",
    "sourceMap": true,
    "target": "es2017",
    "paths": {
      "runtime/*": [
        "src/runtime/*"
      ],
      "plugins/*": [
        "src/plugins/*"
      ],
      "lib/*": [
        "src/lib/*"
      ]
    },
    "declaration": true,
    "outDir": "./dist/src"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./tnt.d.ts"],
  "lib": ["es2020"]
}
